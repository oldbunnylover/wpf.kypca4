<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
                    >
    <!--Логин и регистрация-->
    <Style x:Key="AuthWindow" TargetType="Window">
        <Setter Property="Width" Value="700"></Setter>
        <Setter Property="Height" Value="375"></Setter>
        <Setter Property="WindowStyle" Value="None"></Setter>
        <Setter Property="ResizeMode" Value="NoResize"></Setter>
        <Setter Property="AllowsTransparency" Value="True"></Setter>
        <Setter Property="Background" Value="Transparent"></Setter>
        <Setter Property="FontFamily" Value="/Styles/fonts/#Museo Cyrl 500"></Setter>
    </Style>
    <!--Главное окно-->
    <Style x:Key="MainWindow" TargetType="Window">
        <Setter Property="MinWidth" Value="920"></Setter>
        <Setter Property="MinHeight" Value="610"></Setter>
        <Setter Property="Width" Value="920"></Setter>
        <Setter Property="Height" Value="610"></Setter>
        <Setter Property="Title" Value="DuckLibrary"></Setter>
        <Setter Property="Background" Value="#F2F1EF"></Setter>
        <Setter Property="FontFamily" Value="/Styles/fonts/#Museo Cyrl 500"></Setter>
        <Setter Property="WindowStyle" Value="None"></Setter>
    </Style>

</ResourceDictionary>